{
    "version": "2.0.0",
    
    "tasks": [
        {            
            "label": "Build XGIS DHU ASW HW version",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build lib FwProfile hw",
            ],
            "type": "shell",
            "command": "make clean && make xgis-dhu-asw-hw",
            "options": {
                "cwd": "${workspaceRoot}"
            },

            "group": "build",

            // Show the output window only if unrecognized errors occur.
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },
        {            
            "label": "Build lib FwProfile hw",
            "type": "shell",
            "command": "make clean && make FwProfile-hw",
            "options": {
                "cwd": "${workspaceRoot}/src/include/FwProfile"
            },

            "group": "build",

            // Show the output window only if unrecognized errors occur.
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            
        },
        {            
            "label": "Build XGIS DHU ASW PC version",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build lib FwProfile pc",
                "Build lib glue pc"
            ],
            "type": "shell",
            "command": "make clean && make xgis-dhu-asw-pc",
            "options": {
                "cwd": "${workspaceRoot}"
            },

            "group": "build",

            // Show the output window only if unrecognized errors occur.
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
            
        },
        {            
            "label": "Build lib FwProfile pc",
            "type": "shell",
            "command": "make clean && make FwProfile-pc",
            "options": {
                "cwd": "${workspaceRoot}/src/include/FwProfile"
            },

            "group": "build",

            // Show the output window only if unrecognized errors occur.
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            
        },
        {            
            "label": "Build lib glue pc",
            "type": "shell",
            "command": "make clean && make libglue-pc",
            "options": {
                "cwd": "${workspaceRoot}/src/glue"
            },

            "group": "build",

            // Show the output window only if unrecognized errors occur.
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            
        }
    ]
}